<% if current_user.received_notifications.count >= 1 %>
<%= link_to notifications_path, class: "btn btn-danger btn-sm", data: {turbo_method: :delete} do %>
    <i class="fa-solid fa-eye"></i> Marcar todas como lidas
<% end %>
<ul class="list-group">
<br>
    <% current_user.received_notifications.each do |notification| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Você recebeu uma transferência de $<%= notification.amount %> de <%= notification.sender.nickname %>
            <span class="badge bg-primary rounded-pill"><%= time_ago_in_words(notification.created_at) %> atrás</span>
        </li>
    <% end %>
</ul>
<% else %>
<h1>Não há nenhum notificação!</h1>
<% end%>
